{
  "compilerOptions": {
    "target": "es2020", // or "es2021", "es2022", "esnext"
    "module": "esnext", // This is the key change: emit ES Module syntax
    "moduleResolution": "node", // How modules are resolved
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}